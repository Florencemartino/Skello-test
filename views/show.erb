<div class="container">
  <div class="button-back">
    <a href="/" class="call-to-action">Retour</a>
  </div>
  <div class="wrap">
    <div class="box">
      <% if @post[:photo].nil? %>
          <img src="https://www.jkhfindia.org/files/noimageavailable.png" width="100" height="100">
      <% else %>
          <img src="<%= @post[:photo] %>" width="500" height="400">
      <% end %>
    </div>
    <div class="box post-content">
      <h2><%= @post[:title] %></h2>
      <p><%= @post[:content] %></p>
      <p><%= @post[:rating] %> /5</p><hr>
    </div>
  </div>

  <div class="notification comments">
    <div class="notification-content">
       <% @comment.each_with_index do |comm, index| %>
    <img src='https://picsum.photos/200/300' width="100" height="100"/>
      <p>User <%= index %></p>
      <p><%= comm %></p><hr>
    <% end %>
    </div>
  </div>

</div>
